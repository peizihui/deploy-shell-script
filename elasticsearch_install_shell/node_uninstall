#!/bin/bash

############################################################################################################################
#### 作者：zhang_qiang_neu
#### 用于卸载当前节点上的 ElasticSearch，如果想将整个集群的 ES 卸载需要在集群的每个节点上执行
############################################################################################################################

jps | grep -i elasticsearch | awk '{print $1}' | xargs kill -9
userdel es 
rm -rf /home/es/